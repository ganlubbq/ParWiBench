
__kernel void scrambler(__global int *pInpSeq, __global int *pScrambSeq, __global int *pOutSeq, int n, int n_iters)
{
	int work_items_num = get_global_size(0);
	int task_num = (n + work_items_num - 1) / work_items_num;
	int g_id = get_global_id(0);
	int i, k;

	for (k = 0; k < n_iters; k++)
	{
		for (i = 0; i < task_num; i++)
		{
			int task_id = i * work_items_num + g_id;

			if (task_id < n)
				pOutSeq[task_id] = (pInpSeq[task_id] + pScrambSeq[task_id]) % 2;
		}
	}
}

__kernel void descrambler(__global float *pInpSeq, __global int *pScrambSeq, __global float *pOutSeq, int n)
{
	int work_items_num = get_global_size(0);
	int task_num = (n + work_items_num - 1) / work_items_num;
	int g_id = get_global_id(0);
	int i;

//	printf("%d\n", work_items_num);

	for (i = 0; i < task_num; i++)
	{
		int task_id = i * work_items_num + g_id;

		if (task_id < n)
		{
			pOutSeq[task_id] = (pInpSeq[task_id] * (pScrambSeq[task_id] * (-2.0) + 1.0));
		}
	}
}
