#Compiler PATH
GCC_DIR =
ICC_DIR = /opt/intel/bin

#COMPILER
CC = $(GCC_DIR)gcc
CXX = $(GCC_DIR)g++
AR = $(GCC_DIR)ar

ICC = $(ICC_DIR)/icpc
ICPC = $(ICC_DIR)/icpc
#Hibbert's ICC FLAGS
#ICCFLAGS = -std=c++0x -vec-report0 -restrict -offload=mandatory #-opt-report-phase=offload 
#Xuechao's ICC FLAGS
ICCFLAGS = -std=c99 -openmp -Wno-unknown-pragmas -vec-report3
ICPCFLAGS = -std=c++0x -openmp -Wno-unknown-pragmas -vec-report3
MMIC = -mmic

#ParWiBench_DIR := /home/pacuser12/ParWiBench
ParWiBench_DIR := /home/xcwei/ParWiBench
ifeq "$(ParWiBench_DIR)" ""
$(error ParWiBench project directory is not defined)
endif

LIB_DIR := $(ParWiBench_DIR)/lib
SRC_DIR := $(ParWiBench_DIR)/src

INC_FLAGS =
INC_FLAGS += -I$(LIB_DIR)

CC_DEBUG_FLAGS = -g
CXX_DEBUG_FLAGS = -g

CC_OPT_FLAGS =
#CXX_OPT_FLAGS = -O3
CXX_OPT_FLAGS = 
ICC_OPT_FLAGS = -O3
ICPC_OPT_FLAGS = -O3

CCFLAGS += $(CC_DEBUG_FLAGS)
CCFLAGS += $(CC_OPT_FLAGS)
CCFLAGS += $(INC_FLAGS)

CXXFLAGS += $(CXX_DEBUG_FLAGS)
CXXFLAGS += $(CXX_OPT_FLAGS)
CXXFLAGS += $(INC_FLAGS)

ICCFLAGS += $(INC_FLAGS)
ICCFLAGS += $(ICC_OPT_FLAGS)
ICPCFLAGS += $(INC_FLAGS)
ICPCFLAGS += $(ICPC_OPT_FLAGS)

LINKFLAGS =

# OpenCL
AMD_SDK_HOME = /opt/AMDAPP
